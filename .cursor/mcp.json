{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem"],
      "env": {
        "ROOT_PATH": ".",
        "ALLOWED_PATHS": ".,/etc,/var/lib,/home,/opt"
      }
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--env-file",
        ".env.mcp",
        "ghcr.io/github/github-mcp-server:latest",
        "stdio",
        "--toolsets",
        "repos,pull_requests"
      ]
    }
  }
}
